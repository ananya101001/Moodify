<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Transparent fill -->
    <solid android:color="@android:color/transparent" />

    <!-- Stroke (border) - We will change the color programmatically -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- Default/placeholder color -->

    <!-- Explicit size for the circle drawable itself -->
    <size
        android:width="20dp"
        android:height="20dp"/>
</shape>