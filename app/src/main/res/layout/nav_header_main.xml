<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="48dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Optional: Add an ImageView for a profile picture -->
    <ImageView
        android:id="@+id/imageViewNavHeader"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="User Avatar"
        android:paddingTop="8dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textViewNavHeaderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Ananya Sharma"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"/>

    <!-- Optional: Add another TextView for email or status -->
    <!-- <TextView
        android:id="@+id/textViewNavHeaderEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ananya.sharma@example.com"
        android:textColor="#CCFFFFFF"/> -->

</LinearLayout>