<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001d3d"
    tools:context=".SplashActivity"
    tools:ignore="ExtraText">

    <!-- ADD THE IMAGEVIEW HERE -->
    <ImageView
        android:id="@+id/imageViewMoodIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/emotion"
    android:contentDescription="Mood Icon"
    app:layout_constraintBottom_toTopOf="@+id/textViewAppName"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginBottom="16dp" />


    <!-- Your Existing TextView -->
    <TextView
        android:id="@+id/textViewAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moodify"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#edede9"
        android:fontFamily="@font/winkyrough_variablefont_wght"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>